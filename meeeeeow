class Animal
{
  double price;
  double weight;
public:
  Animal()
  {
    this->price = 0;
    this->weighte = 0;
  }
  Animal(double price, double weight)
  {
    this->price = price;
    this->weight = weight;
  }
  void Show()
  {
    cout << "Price: " << this->price << "\nWeight: " << this->weight << endl;
  }
  double GetPrice()
  {
    return this->price;
  }
  double GetWeight()
  {
    return this->weight;
  }
  void SetPrice(double price)
  {
    this->price = price;
  }
  void SetWeight(double weight)
  {
    this->weight = weight;
  }
};

class Mouse : public Animal
{
  Animal animal;
public:
  Mouse()
  {
    this->animal = Animal();
  }
  Mouse(Animal animal)
  {
    this->animal = Animal(animal.GetPrice(), animal.GetWeight());
  }
  Animal GetAnimal()
  {
    return this->animal;
  }
  void SetAnimal(Animal animal)
  {
    this->animal = Animal(animal.GetPrice(), animal.GetWeight());
  }
};

