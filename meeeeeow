class Frute
{
  double price;
  int weight;
public:
  Frute()
  {
    this->price = 0;
    this->weight = 0;
  }
  Frute(double price, int weight)
  {
    this->price = price;
    this->weight = weight;
  }
  void Show()
  {
    cout << "Price: " << this->price << "\nWeight: " << this->weight << endl;
  }
  double GetPrice()
  {
    return this->price;
  }
  int GetWeight()
  {
    return this->wight;
  }
  void SetPrice(double price)
  {
    this->price = price;
  }
  void SetWeight(int weight)
  {
    this->weight = weight;
  }
};

class Banana : public Fruit {

 Frute frute;
 
