class Technique
{
  double price;
  
public:
  Technique()
  {
    this->price = 0;
    
  }
  Technique(double price)
  {
    this->price = price;
  }
  void Show()
  {
    cout << "Price: " << this->price << endl;
  }
  double GetPrice()
  {
    return this->price;
  }
 
  void SetPrice(double price)
  {
    this->price = price;
  }
};

class Phone : public Technique
{
  Technique technique ;
public:
  Phone()
  {
    this->technique = Technique();
  }
  Phone(Technique technique)
  {
    this->technique = Technique(technique.GetPrice());
  }
  Technique GetTechnique()
  {
    return this->technique;
  }
  void SetTechnique(Technique technique)
  {
    this->Technique = Technique(technique.GetPrice());
  }
};

void main()
{
  Technique obj = Technique(100);
  obj.Show();
  Phone phone = Phone();
  
}
